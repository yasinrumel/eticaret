@model IEnumerable<eticaret.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <p>
    <a asp-action="Create" class="btn btn-primary form-control">Ürün ekle</a>
</p>
<table class="table table-striped table-bordered" id="myTable">
    <thead>
        <tr>
            <th>
                Resim
            </th>
            <th>
                Başlık
            </th>
            <th>
                Stok
            </th>
            <th>
                Anasayfa
            </th>
            <th>
                Kategori
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
                <tr>
                    <td>
                        @if (item.image == null)
                        {
                            <img src="https://yumed.org.tr/tema/genel/uploads/ekibimiz/gorsel_1_1.png" width="200" height="150">
                        }
                        else
                        {
                            <img src="@item.image" width="100" height="80">
                        }
                    </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @if (item.IsStock)
                        {
                            <label class="btn btn-success btn-sm"><i class="bi bi-check-circle-fill"></i> Evet</label>
                        }
                        else
                        {
                            <label class="btn btn-danger btn-sm"><i class="bi bi-x-circle-fill"></i> Hayır</label>
                        }
            </td>
           
            <td>
                        @if (item.IsHome)
                        {
                            <label class="btn btn-success btn-sm"><i class="bi bi-check-circle-fill"></i> Evet</label>
                        }
                        else
                        {
                            <label class="btn btn-danger btn-sm"><i class="bi bi-x-circle-fill"></i> Hayır</label>
                        }

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category.Name)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm"><i class="bi bi-pencil"></i> Düzenle</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>



</div>


@section Scripts{
    <script tpye="text/javascript">
        
    
        let table = new DataTable('#myTable');
    </script>
}

