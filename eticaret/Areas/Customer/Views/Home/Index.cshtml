@model IEnumerable<eticaret.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}


<div class="container">
    <div class="row">
        <div col-md-3>
            <div class="card">
                <div class="list-group">
                 <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
                   The current link item
                 </a>
                 <a href="#" class="list-group-item list-group-item-action">Telefon</a>
                 <a href="#" class="list-group-item list-group-item-action">Tablet</a>
                 <a href="#" class="list-group-item list-group-item-action">Bilgisayar</a>
                 <a class="list-group-item list-group-item-action disabled">Konsol, Oyun ve Oyuncu Ekipmanları</a>
                </div>

            </div>
        </div>
        @foreach  (var item in Model)
        {
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">
                        @item.Title
                    </div>
                  <img src="@item.image" class="card-img-top" alt="..." style="height:200px">
                  <div class="card-body">
                    <p class="card-text">@item.Description</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                  </div>
                  <div class="card-footer">
                      <label style="font-size:20px;color:crimson">@item.Price.ToString("0.00") TL</label>
                      <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-outline-info" style="float:right">Detay</a>
                  </div>
                </div>
            </div>
        }
    </div>
</div>

